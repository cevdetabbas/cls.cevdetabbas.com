      <div style="display:flex; align-items:center; gap:10px;">
        <span style="font-size: 13px; font-weight: 700; color: var(--muted);">Simulation</span>
        <label class="switch">
          <input type="checkbox" id="simSwitch">
          <span class="slider"></span>
        </label>
      </div>
    </div>
