  <script>
    const assignedMinutes = [3, 30, 10, 2];
    const TZ = 'America/Chicago';
    let simulationOn = false;
    let simAnchor = null;
    let lastStage = -1;

    // BELL SCHEDULES
    const scheduleMonThu = [
      { name:'Period 1', start:'07:50', end:'08:38' },
      { name:'Period 2', start:'08:41', end:'09:29' },
      { name:'Period 3', start:'09:32', end:'10:20' },
      { name:'Period 4', start:'10:23', end:'11:10' },
      { name:'Period 5', start:'11:13', end:'12:01' },
      { name:'Period 6', start:'12:04', end:'12:52' },
      { name:'Period 7', start:'12:55', end:'13:43' },
      { name:'Period 8', start:'13:46', end:'14:34' },
      { name:'Period 9', start:'14:37', end:'15:25' }
    ];

    function getNow() {
      if (!simulationOn) return new Date();
      if (!simAnchor) simAnchor = { real: Date.now(), fake: Date.now() };
      const elapsed = (Date.now() - simAnchor.real) * 60; // 60x Speed
      return new Date(simAnchor.fake + elapsed);
    }

    function jumpTo(stageIdx) {
      simulationOn = true;
      document.getElementById('simSwitch').checked = true;
      
      const now = new Date();
      // En yakın veya ilk dersi bul
      const targetMin = 7 * 60 + 50; // 07:50'den başlat
      
      let offsetMin = 0;
      for (let i = 0; i < stageIdx; i++) offsetMin += assignedMinutes[i];
      
      simAnchor = {
        real: Date.now(),
        fake: now.setHours(7, 50 + offsetMin, 0, 0)
      };
      announce("Jumping to " + (stageIdx === 2 ? "Typing Stage" : "Login Stage"));
    }

    function announce(msg) {
      const b = document.getElementById('banner');
      b.textContent = msg;
      b.classList.add('show');
      setTimeout(() => b.classList.remove('show'), 3000);
      const synth = window.speechSynthesis;
      const utter = new SpeechSynthesisUtterance(msg);
      synth.speak(utter);
    }

    function tick() {
      const now = getNow();
      
      // Update UI Clocks
      document.getElementById('dateChip').textContent = now.toLocaleDateString('en-US');
      document.getElementById('timeChip').textContent = now.toLocaleTimeString('en-US', { hour12: false });
      document.getElementById('bigClock').textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false });

      const currentMin = now.getHours() * 60 + now.getMinutes() + now.getSeconds()/60;
      const day = now.getDay();
      
      // Determine Period
      const sched = scheduleMonThu; // Basitlik için MonThu kullanıyoruz
      const seg = sched.find(s => {
        const start = parseInt(s.start.split(':')[0])*60 + parseInt(s.start.split(':')[1]);
        const end = parseInt(s.end.split(':')[0])*60 + parseInt(s.end.split(':')[1]);
        return currentMin >= start && currentMin < end;
      });

      if (!seg) {
        document.getElementById('standby').classList.add('show');
        return;
      }
      
      document.getElementById('standby').classList.remove('show');
      document.getElementById('footerPeriod').textContent = `Current Period: ${seg.name} (${seg.start}-${seg.end})`;
      document.getElementById('footerClass').textContent = "Activity: Tech Apps";

      // Calculate Stages
      const startMin = parseInt(seg.start.split(':')[0])*60 + parseInt(seg.start.split(':')[1]);
      const endMin = parseInt(seg.end.split(':')[1]) === 38 ? startMin + 48 : startMin + 45; // 48 vs 45 min
      const periodLenSec = (endMin - startMin) * 60;
      const elapsedSec = (currentMin - startMin) * 60;

      const totalAssignedMin = assignedMinutes.reduce((a,b)=>a+b, 0);
      const stageDursSec = assignedMinutes.map(m => (m/totalAssignedMin) * periodLenSec);

      let accumulated = 0;
      let stage = -1;

      for(let i=0; i<4; i++) {
        const ring = document.getElementById(`ring${i}`);
        const card = document.getElementById(`card${i}`);
        const cd = document.getElementById(`cd${i}`);

        if (elapsedSec >= accumulated && elapsedSec < (accumulated + stageDursSec[i])) {
          stage = i;
          card.classList.add('active');
          const left = Math.ceil(accumulated + stageDursSec[i] - elapsedSec);
          cd.textContent = new Date(left * 1000).toISOString().substr(14, 5);
          
          // Progress Ring
          const pct = (elapsedSec - accumulated) / stageDursSec[i];
          ring.style.strokeDashoffset = 283 - (pct * 283);
        } else {
          card.classList.remove('active');
          ring.style.strokeDashoffset = 283;
        }
        accumulated += stageDursSec[i];
      }

      if (stage !== -1 && stage !== lastStage) {
        const names = ["Login", "Learning", "Typing", "Logout"];
        announce(names[stage] + " Session Started");
        lastStage = stage;
      }
    }

    document.getElementById('simSwitch').addEventListener('change', (e) => {
      simulationOn = e.target.checked;
      simAnchor = null;
    });

    setInterval(tick, 500);
  </script>
</body>
</html>
