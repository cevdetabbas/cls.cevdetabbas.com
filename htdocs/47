  <main>
    <div class="grid">
      <div class="card" id="card0">
        <div class="session-title">LOGIN</div>
        <div class="session-time">DURATION: 3 MIN</div>
        <div class="circle-wrap">
          <svg class="ring-svg" viewBox="0 0 100 100"><circle class="ring-bg" cx="50" cy="50" r="45"/><circle class="ring-bar" id="ring0" cx="50" cy="50" r="45"/></svg>
        </div>
