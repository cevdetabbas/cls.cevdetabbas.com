  <footer>
    <div style="display: flex;">
      <button class="btn" onclick="startClass()">â–¶ START CLASS</button>
      <button class="btn btn-sec" onclick="jumpTo(0)">LOGIN</button>
      <button class="btn btn-sec" onclick="jumpTo(1)">LEARNING</button>
      <button class="btn btn-sec" onclick="jumpTo(2)">TYPING</button>
      <button class="btn btn-sec" onclick="jumpTo(3)">LOGOUT</button>
    </div>
    <div style="display: flex; align-items: center; gap: 30px;">
      <button class="btn btn-sec" onclick="playChime()" style="font-size: 30px; border-radius: 50%; width: 70px; height: 70px; padding: 0;">ðŸ””</button>
      <div class="mode-group">
        <button class="mode-btn active" id="m-real" onclick="setMode('real')">REALTIME</button>
        <button class="mode-btn" id="m-sim" onclick="setMode('sim')">SIMULATE</button>
        <button class="mode-btn" id="m-flash" onclick="setMode('flash')">FLASH</button>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    const audio = new (window.AudioContext || window.webkitAudioContext)();

    // ATMOSPHERE ENGINE
    function initAtmosphere() {
      const stages = [document.getElementById('stage-0'), document.getElementById('stage-1'), document.getElementById('stage-2')];
      stages.forEach((s, idx) => {
        s.innerHTML = '';
        for(let i=0; i<25; i++) {
          const p = document.createElement('div');
          p.style.left = Math.random()*100 + 'vw';
          p.style.animationDelay = Math.random()*5 + 's';
          if(idx===0) { p.className = 'bubble'; p.style.width = p.style.height = (30+Math.random()*70)+'px'; }
          if(idx===1) { p.className = 'snow'; p.style.width = p.style.height = (8+Math.random()*12)+'px'; }
          if(idx===2 && i===0) { p.className = 'penguin'; p.innerText = 'ðŸ§'; }
          s.appendChild(p);
        }
      });
    }
    let stageCycle = 0;
    setInterval(() => {
      if(currentMode !== 'real') return;
      document.querySelectorAll('.stage').forEach(s => s.classList.remove('active'));
      stageCycle = (stageCycle + 1) % 3;
      document.getElementById(`stage-${stageCycle}`).classList.add('active');
    }, 8000);
    initAtmosphere();

    async function announce(msg) {
      playChime();
      await new Promise(r => setTimeout(r, 2200)); 
      const ut = new SpeechSynthesisUtterance(msg);
      ut.rate = 0.9; ut.pitch = 1.1;
      window.speechSynthesis.speak(ut);
    }

    function playChime() {
      const now = audio.currentTime;
      const freq = [554.37, 440.00, 329.63, 277.18]; // HaalimanÄ± Anons Tonu
      freq.forEach((f, i) => {
        const o = audio.createOscillator(); const g = audio.createGain();
        o.frequency.setValueAtTime(f, now + i * 0.45);
        g.gain.setValueAtTime(0, now + i * 0.45);
        g.gain.linearRampToValueAtTime(0.3, now + i * 0.45 + 0.05);
        g.gain.exponentialRampToValueAtTime(0.01, now + (i + 1.2) * 0.8);
        o.connect(g); g.connect(audio.destination);
        o.start(now + i * 0.45); o.stop(now + (i + 1.2) * 0.8);
      });
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null;
      document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
      document.getElementById('m-'+m).classList.add('active');
      lastStage = -1;
      // Reset cards visually
      document.querySelectorAll('.card').forEach(c => c.classList.remove('active'));
      document.querySelectorAll('.ring-bar').forEach(r => r.style.strokeDashoffset = 283);
    }

    function startClass() {
      if(currentMode === 'real') setMode('sim');
      const d = new Date(); d.setHours(7, 50, 0, 0);
      timeAnchor = { real: Date.now(), fake: d.getTime() };
      announce("Welcome to the Tech Zone. The class session is now beginning.");
    }

    function jumpTo(idx) {
      if(currentMode === 'real') setMode('sim');
      const d = new Date();
      let offset = 0; for(let i=0; i<idx; i++) offset += sessionMins[i];
      d.setHours(7, 50 + offset, 0, 0);
      timeAnchor = { real: Date.now(), fake: d.getTime() };
      announce(names[idx] + " session is now active.");
    }

    function tick() {
      const realNow = new Date();
      document.getElementById('dVal').textContent = `${realNow.getMonth()+1}/${realNow.getDate()}/${realNow.getFullYear()}`;
      document.getElementById('tVal').textContent = realNow.toLocaleTimeString('en-US', {hour12:false});

      const start = 7*3600 + 50*60, end = start + (45*60);
      const isClassReal = (realNow.getHours()*3600 + realNow.getMinutes()*60) >= start && (realNow.getHours()*3600 + realNow.getMinutes()*60) < end;

      // Atmosphere & Deck Visibility
      const isStandby = currentMode === 'real' && !isClassReal;
      document.getElementById('atmosphere').classList.toggle('visible', isStandby);
      document.getElementById('flight-deck').classList.toggle('active', isStandby);

      let workingTime = (currentMode === 'real') ? realNow : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : null);
      
      if(workingTime) {
        const curr = workingTime.getHours()*3600 + workingTime.getMinutes()*60 + workingTime.getSeconds();
        let acc = start;
        let anyActive = false;
        
        for(let i=0; i<4; i++) {
          const c = document.getElementById(`card${i}`), r = document.getElementById(`ring${i}`), t = document.getElementById(`tm${i}`);
          const dur = sessionMins[i]*60;
          
          if (curr >= acc && curr < acc + dur) {
            anyActive = true;
            if (i !== lastStage) { announce(names[i] + " session starting now."); lastStage = i; }
            c.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            c.classList.remove('active');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
        if(!anyActive && curr >= end && timeAnchor) { timeAnchor = null; lastStage = -1; announce("Class session complete."); }
      }

      if(isStandby) {
        let t = new Date(realNow); t.setHours(7,50,0,0);
        if((realNow.getHours()*3600 + realNow.getMinutes()*60) >= end) t.setDate(t.getDate()+1);
        while(t.getDay() === 0 || t.getDay() === 6) t.setDate(t.getDate()+1);
        const diff = Math.floor((t - realNow) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('targetNote').textContent = t.toLocaleDateString('en-US',{weekday:'long'}).toUpperCase() + " 07:50";
      }
    }

    setInterval(tick, 1000); 
    tick();
  </script>
</body>
</html>
