<body>
  <header>
    <div class="header-bar">
      <div class="header-block">
        <div class="header-label">Date</div>
        <div class="header-value" id="dateText">--/--/----</div>
      </div>

      <h1>Tech App with Mr. Oz</h1>

      <div class="header-block">
        <div class="header-label">Time</div>
        <div class="header-value" id="timeText">--:-- --</div>
      </div>
    </div>
  </header>

  <main>
    <div class="card-row">
      <div class="stage-card" data-stage="0">
        <h2 class="stage-title">LOGIN</h2>
        <div class="stage-timer-section">
          <div class="stage-duration" id="dLogin">Duration: 03:00</div>
          <div class="stage-countdown" id="cLogin">--:--</div>
        </div>
      </div>

      <div class="stage-card" data-stage="1">
        <h2 class="stage-title">LEARNING.COM</h2>
        <div class="stage-timer-section">
          <div class="stage-duration" id="dLearn">Duration: 30:00</div>
          <div class="stage-countdown" id="cLearn">--:--</div>
        </div>
      </div>

      <div class="stage-card" data-stage="2">
        <h2 class="stage-title">TYPING.COM</h2>
        <div class="stage-timer-section">
          <div class="stage-duration" id="dTyping">Duration: 10:00</div>
          <div class="stage-countdown" id="cTyping">--:--</div>
        </div>
      </div>

      <div class="stage-card" data-stage="3">
        <h2 class="stage-title">LOGOUT</h2>
        <div class="stage-timer-section">
          <div class="stage-duration" id="dLogout">Duration: 02:00</div>
          <div class="stage-countdown" id="cLogout">--:--</div>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <div class="timer-row">
      <div class="time-label">
        <span id="modeLabel">Auto</span> 
        Â· <span id="timeLeftLabel">--:--</span> 
        Â· <span id="segmentLabel">Period 1 (07:50â€“08:38)</span>
      </div>
      <div class="timer-bar" id="timerBar"></div>
    </div>

    <div class="controls">
      <button class="btn" id="toggleSimBtn">ðŸ•’ Simulation: OFF</button>
      <button class="btn primary" id="resetSimBtn">ðŸ”„ Reset Timer</button>
      <div class="status-text" id="statusText">
        Live classroom timer synced to school bell schedule
      </div>
    </div>

    <audio id="stageSound" src="beep.mp3" preload="auto"></audio>
    <audio id="announceAudio" preload="auto"></audio>
  </footer>

  <script>
    // DOM elements
    const dateText = document.getElementById('dateText');
    const timeText = document.getElementById('timeText');
    const stageCards = document.querySelectorAll('.stage-card');
    const stageSound = document.getElementById('stageSound');
    const announceAudio = document.getElementById('announceAudio');
    
    const modeLabel = document.getElementById('modeLabel');
    const timeLeftLabel = document.getElementById('timeLeftLabel');
    const segmentLabel = document.getElementById('segmentLabel');
    const statusText = document.getElementById('statusText');
    const timerBar = document.getElementById('timerBar');
    
    const cLogin = document.getElementById('cLogin');
    const cLearn = document.getElementById('cLearn');
    const cTyping = document.getElementById('cTyping');
    const cLogout = document.getElementById('cLogout');
    
    const toggleSimBtn = document.getElementById('toggleSimBtn');
    const resetSimBtn = document.getElementById('resetSimBtn');

    // Fixed routine: [Login, Learning, Typing, Logout] in minutes
    const routineUnits = [3, 30, 10, 2];
    const TOTAL_UNITS = routineUnits.reduce((a,b)=>a+b,0);
    
    let simulationOn = false;
    let lastStage = -1;
    let simAnchorRealMs = null;
    let simAnchorScheduleMin = null;
    let smoothFillEl = null;

    // School bell schedule (Mon-Thu)
    const scheduleMonThu = [
      { name: 'Period 1', type: 'class', start: '07:50', end: '08:38' },
      { name: 'Period 2', type: 'class', start: '08:41', end: '09:29' },
      { name: 'Period 3', type: 'class', start: '09:32', end: '10:20' },
      { name: 'Period 4', type: 'class', start: '10:23', end: '11:10' },
      { name: 'Period 5', type: 'class', start: '11:13', end: '12:01' },
      { name: 'Period 6', type: 'class', start: '12:04', end: '12:52' },
      { name: 'Period 7', type: 'class', start: '12:55', end: '13:43' },
      { name: 'Period 8', type: 'class', start: '13:46', end: '14:34' },
      { name: 'Period 9', type: 'class', start: '14:37', end: '15:25' }
    ];

    function formatMDY(d) {
      return `${d.getMonth()+1}/${d.getDate()}/${d.getFullYear()}`;
    }

    function formatHMS12(d) {
      let h = d.getHours();
      const m = String(d.getMinutes()).padStart(2,'0');
      const s = String(d.getSeconds()).padStart(2,'0');
      const ampm = h >= 12 ? 'PM' : 'AM';
      h = h % 12 || 12;
      return `${h}:${m}:${s} ${ampm}`;
    }

    function formatHMS(secs) {
      secs = Math.max(0, Math.floor(secs));
      const m = Math.floor(secs / 60);
      const s = secs % 60;
      return `${String(m).padStart(2,'0')}:${String(s).padStart(2,'0')}`;
    }

    function updateHeaderClock(now) {
      dateText.textContent = formatMDY(now);
      timeText.textContent = formatHMS12(now);
    }

    function createTimerBar() {
      timerBar.innerHTML = '';
      
      smoothFillEl = document.createElement('div');
      smoothFillEl.className = 'smooth-fill';
      smoothFillEl.style.background = `linear-gradient(90deg, 
        var(--blue) 0%, var(--blue) ${100*routineUnits[0]/TOTAL_UNITS}%,
        var(--green) ${100*routineUnits[0]/TOTAL_UNITS}%, var(--green) ${100*(routineUnits[0]+routineUnits[1])/TOTAL_UNITS}%,
        var(--amber) ${100*(routineUnits[0]+routineUnits[1])/TOTAL_UNITS}%, var(--amber) ${100*(routineUnits[0]+routineUnits[1]+routineUnits[2])/TOTAL_UNITS}%,
        var(--pink) ${100*(routineUnits[0]+routineUnits[1]+routineUnits[2])/TOTAL_UNITS}% )`;
      smoothFillEl.style.width = '0%';
      timerBar.appendChild(smoothFillEl);
    }

    function playAnnouncement(stage) {
      const files = ['login.mp3', 'learning.mp3', 'typing.mp3', 'logout.mp3'];
      const src = files[stage];
      if (src) {
        announceAudio.src = src;
        announceAudio.currentTime = 0;
        announceAudio.play().catch(() => {});
      }
    }

    function getCurrentPeriod(now) {
      const nowMin = now.getHours() * 60 + now.getMinutes();
      for (const period of scheduleMonThu) {
        const startMin = period.start.split(':').map(Number);
        const endMin = period.end.split(':').map(Number);
        const sMin = startMin[0]*60 + startMin[1];
        const eMin = endMin[0]*60 + endMin[1];
        if (nowMin >= sMin && nowMin < eMin) {
          return { ...period, startMin: sMin, endMin: eMin };
        }
      }
      return null;
    }

    function tick() {
      const now = simulationOn && simAnchorRealMs ? 
        new Date(simAnchorRealMs + (Date.now() - simAnchorRealMs) * 60) : new Date();
      
      updateHeaderClock(now);
      
      const period = getCurrentPeriod(now);
      if (!period) {
        segmentLabel.textContent = 'No active class period';
        stageCards.forEach((c,i) => {
          c.classList.remove('active');
          c.classList.add('dimmed');
          document.getElementById(`cLogin`).textContent = '--:--';
        });
        return;
      }

      const totalRoutineSec = TOTAL_UNITS * 60;
      const elapsedSec = Math.min((now.getHours()*60 + now.getMinutes() + now.getSeconds()/60 - period.startMin) * 60, totalRoutineSec);
      const progress = elapsedSec / totalRoutineSec;
      
      // Update main timer
      segmentLabel.textContent = `${period.name} (${period.start}-${period.end})`;
      timeLeftLabel.textContent = formatHMS(totalRoutineSec - elapsedSec);
      smoothFillEl.style.width = `${Math.min(progress * 100, 100)}%`;
      
      // Find active stage
      let stage = 0;
      let stageStartSec = 0;
      for (let i = 0; i < routineUnits.length; i++) {
        const stageEndSec = stageStartSec + routineUnits[i] * 60;
        if (elapsedSec >= stageStartSec && elapsedSec < stageEndSec) {
          stage = i;
          break;
        }
        stageStartSec = stageEndSec;
      }
      
      // Update stage cards
      stageCards.forEach((card, i) => {
        card.classList.toggle('active', i === stage);
        card.classList.toggle('dimmed', i !== stage);
        
        const countdownEl = document.getElementById(['cLogin','cLearn','cTyping','cLogout'][i]);
        const remaining = Math.max(0, stageStartSec + routineUnits[i]*60 - elapsedSec);
        
        if (i === stage) {
          countdownEl.textContent = formatHMS(remaining);
          countdownEl.classList.add('active');
        } else {
          countdownEl.textContent = formatHMS(routineUnits[i]*60);
          countdownEl.classList.remove('active');
        }
      });
      
      // Stage transition sound & announcement
      if (stage !== lastStage && lastStage !== -1) {
        stageSound.currentTime = 0;
        stageSound.play().catch(() => {});
        playAnnouncement(stage);
      }
      lastStage = stage;
      
      modeLabel.textContent = simulationOn ? 'Sim 60x' : 'Live';
    }

    // Event listeners
    toggleSimBtn.onclick = () => {
      simulationOn = !simulationOn;
      toggleSimBtn.textContent = `ðŸ•’ Simulation: ${simulationOn ? 'ON' : 'OFF'}`;
      if (simulationOn) simAnchorRealMs = Date.now();
    };
    
    resetSimBtn.onclick = () => {
      simAnchorRealMs = Date.now();
      lastStage = -1;
    };

    // Initialize
    createTimerBar();
    setInterval(tick, 1000);
    tick();
  </script>
</body>
</html>

