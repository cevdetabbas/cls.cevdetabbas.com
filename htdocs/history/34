  <script>
    const assignedMinutes = [3, 30, 10, 2];
    const TZ = 'America/Chicago';
    let simulationOn = false;
    let lastStage = -1;

    // Simulation logic
    const simToggle = document.getElementById('simToggle');
    simToggle.addEventListener('change', (e) => {
      simulationOn = e.target.checked;
      simReset();
    });

    let simAnchorReal = null;
    let simAnchorSchedule = null;
    function simReset() { simAnchorReal = null; }

    function getNow() {
      const realNow = new Date();
      if (!simulationOn) return realNow;
      if (!simAnchorReal) {
        simAnchorReal = Date.now();
        simAnchorSchedule = realNow.getHours() * 3600 + realNow.getMinutes() * 60 + realNow.getSeconds();
      }
      const elapsed = (Date.now() - simAnchorReal) / 1000 * 60; // 60x speed
      const fakeSeconds = simAnchorSchedule + elapsed;
      const d = new Date();
      d.setHours(0, 0, 0, 0);
      d.setSeconds(fakeSeconds);
      return d;
    }

    // Announcements
    function announce(text) {
      const banner = document.getElementById('banner');
      banner.textContent = text.toUpperCase();
      banner.classList.add('show');
      setTimeout(() => banner.classList.remove('show'), 4000);

      // Text to Speech
      const msg = new SpeechSynthesisUtterance(text);
      msg.rate = 0.9; 
      msg.pitch = 1;
      window.speechSynthesis.speak(msg);
    }

    function tick() {
      const now = getNow();
      
      // Update Clocks
      document.getElementById('dateChip').textContent = now.toLocaleDateString();
      document.getElementById('timeChip').textContent = now.toLocaleTimeString();

      // Dummy Schedule Logic for Demo (Real one used in your prev code)
      // Simulating being in a 45 min class
      const startMin = 8 * 60; // 08:00
      const nowMin = now.getHours() * 60 + now.getMinutes();
      const elapsedSec = (nowMin - startMin) * 60 + now.getSeconds();
      const totalPeriodSec = 45 * 60;

      if (elapsedSec > 0 && elapsedSec < totalPeriodSec) {
        let acc = 0;
        let stage = -1;
        const durations = assignedMinutes.map(m => (m / 45) * totalPeriodSec);

        for (let i = 0; i < durations.length; i++) {
          if (elapsedSec >= acc && elapsedSec < acc + durations[i]) {
            stage = i;
            const remaining = Math.ceil(acc + durations[i] - elapsedSec);
            document.querySelectorAll('.cd')[i].textContent = formatTime(remaining);
            document.getElementById('bigTimer').textContent = formatTime(remaining);
            break;
          }
          acc += durations[i];
        }

        // Handle Stage Changes
        if (stage !== lastStage && stage !== -1) {
          const names = ["Login", "Learning.com", "Typing.com", "Logout"];
          document.querySelectorAll('.card').forEach((c, idx) => {
            c.classList.toggle('active', idx === stage);
          });
          document.getElementById('currentPhase').textContent = "Now: " + names[stage];
          announce(names[stage] + " session started");
          lastStage = stage;
        }
      }
    }

    function formatTime(sec) {
      const m = Math.floor(sec / 60);
      const s = sec % 60;
      return `${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
    }

    setInterval(tick, 500);
  </script>
</body>
