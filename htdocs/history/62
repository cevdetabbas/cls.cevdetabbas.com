            box-shadow: 0 0 15px rgba(255, 255, 255, 0.7);
            animation: rise 12s infinite ease-in;
            pointer-events: none;
        }

        @keyframes rise {
            0% {
                transform: translateY(0) translateX(0) scale(0.8);
                opacity: 0;
            }
            10% {
                opacity: 0.9;
            }
            100% {
                transform: translateY(-110vh) translateX(40px) scale(1.1);
                opacity: 0;
            }
        }

        /* SPARKLES */
        .sparkle {
