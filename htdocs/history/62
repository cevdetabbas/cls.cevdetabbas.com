        /* SNOW EFFECT */
        .snowflake { position: absolute; background: #fff; border-radius: 50%; opacity: 0.8; pointer-events: none; animation: fall linear infinite; }
        @keyframes fall { from { transform: translateY(-10vh); } to { transform: translateY(90vh); } }

        /* FIREWORKS */
        .firework { position: absolute; width: 5px; height: 5px; border-radius: 50%; animation: explode 1s ease-out forwards; }
        @keyframes explode {
            0% { transform: scale(1); opacity: 1; }
            100% { transform: scale(30); opacity: 0; box-shadow: 0 0 20px 5px currentColor; }
        }

        /* BUBBLES */
        .bubble {
            position: absolute;
