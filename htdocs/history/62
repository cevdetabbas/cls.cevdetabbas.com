        .penguin:nth-child(1) { animation-duration: 22s; animation-delay: 0s; }
        .penguin:nth-child(2) { animation-duration: 18s; animation-delay: 4s; bottom: 50px; }
        .penguin:nth-child(3) { animation-duration: 26s; animation-delay: 8s; bottom: 40px; }

