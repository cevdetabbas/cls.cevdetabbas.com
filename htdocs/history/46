  <footer>
    <div style="display: flex; gap: 15px;">
      <button class="btn" onclick="runSession('all')">START CLASS</button>
      <button class="btn btn-secondary" onclick="runSession(0)">LOGIN</button>
      <button class="btn btn-secondary" onclick="runSession(1)">LEARNING</button>
      <button class="btn btn-secondary" onclick="runSession(2)">TYPING</button>
      <button class="btn btn-secondary" onclick="runSession(3)">LOGOUT</button>
    </div>
    <div style="display: flex; gap: 15px; align-items: center;">
      <button class="btn btn-secondary" onclick="playChime()" style="font-size: 25px;">ðŸ””</button>
      <div style="background: #f2f2f7; padding: 5px; border-radius: 15px; display: flex; gap: 5px;">
        <button class="btn btn-secondary" id="m-real" onclick="setMode('real')">REALTIME</button>
        <button class="btn btn-secondary" id="m-sim" onclick="setMode('sim')">SIMULATE</button>
        <button class="btn btn-secondary" id="m-flash" onclick="setMode('flash')">FLASH</button>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    const audio = new (window.AudioContext || window.webkitAudioContext)();

    // ATMOSPHERE ENGINE
    function spawnParticles() {
      const stages = [document.getElementById('stage-0'), document.getElementById('stage-1'), document.getElementById('stage-2')];
      stages.forEach((s, idx) => {
        s.innerHTML = '';
        for(let i=0; i<20; i++) {
          const p = document.createElement('div');
          p.style.left = Math.random()*100 + 'vw'; p.style.animationDelay = Math.random()*5 + 's';
          if(idx===0) { p.className = 'bubbles'; p.style.width = p.style.height = (20+Math.random()*40)+'px'; }
          if(idx===1) { p.className = 'snow'; p.style.width = p.style.height = (5+Math.random()*10)+'px'; }
          if(idx===2 && i===0) { p.className = 'penguin'; p.innerText = 'ðŸ§'; }
          s.appendChild(p);
        }
      });
    }
    let stageCycle = 0;
    setInterval(() => {
        if(currentMode !== 'real') return;
        document.querySelectorAll('.stage').forEach(s => s.classList.remove('active'));
        stageCycle = (stageCycle + 1) % 3;
        document.getElementById(`stage-${stageCycle}`).classList.add('active');
    }, 5000);
    spawnParticles();

    async function announce(msg) {
      playChime();
      await new Promise(r => setTimeout(r, 2000));
      window.speechSynthesis.speak(new SpeechSynthesisUtterance(msg));
    }

    function playChime() {
      const now = audio.currentTime;
      [554, 440, 329, 277].forEach((f, i) => {
        const o = audio.createOscillator(); const g = audio.createGain();
        o.frequency.setValueAtTime(f, now + i * 0.4);
        g.gain.setValueAtTime(0, now + i * 0.4);
        g.gain.linearRampToValueAtTime(0.2, now + i * 0.4 + 0.05);
        g.gain.exponentialRampToValueAtTime(0.01, now + (i+1)*0.8);
        o.connect(g); g.connect(audio.destination);
        o.start(now + i * 0.4); o.stop(now + (i+1)*0.8);
      });
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null;
      document.querySelectorAll('.btn-secondary').forEach(b => b.style.background = '#f2f2f7');
      document.getElementById('m-'+m).style.background = '#fff';
    }

    function runSession(idx) {
      if(currentMode === 'real') setMode('sim');
      const d = new Date();
      let offset = 0;
      if(idx !== 'all') { for(let i=0; i<idx; i++) offset += sessionMins[i]; }
      timeAnchor = { real: Date.now(), fake: d.setHours(7, 50 + offset, 0, 0) };
      announce(idx === 'all' ? "Class session is starting" : names[idx] + " session is active");
    }

    function tick() {
      const realNow = new Date();
      document.getElementById('dVal').textContent = `${realNow.getMonth()+1}/${realNow.getDate()}/${realNow.getFullYear()}`;
      document.getElementById('tVal').textContent = realNow.toLocaleTimeString('en-US', {hour12:false});

      const start = 7*3600 + 50*60, end = start + (45*60);
      const isClassTimeReal = (realNow.getHours()*3600 + realNow.getMinutes()*60) >= start && (realNow.getHours()*3600 + realNow.getMinutes()*60) < end;

      // Handle Atmosphere Visibility
      document.getElementById('atmosphere').classList.toggle('visible', currentMode === 'real' && !isClassTimeReal);
      document.getElementById('flight-deck').classList.toggle('active', currentMode === 'real' && !isClassTimeReal);

      let now = (currentMode === 'real') ? realNow : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : null);
      
      if(now) {
        const curr = now.getHours()*3600 + now.getMinutes()*60 + now.getSeconds();
        let acc = start;
        for(let i=0; i<4; i++) {
          const c = document.getElementById(`card${i}`), r = document.getElementById(`ring${i}`), t = document.getElementById(`tm${i}`);
          const dur = sessionMins[i]*60;
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(`${names[i]} session starting`); lastStage = i; }
            c.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            c.classList.remove('active');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      }

      if(currentMode === 'real' && !isClassTimeReal) {
        let t = new Date(realNow); t.setHours(7,50,0,0);
        if((realNow.getHours()*3600 + realNow.getMinutes()*60) >= end) t.setDate(t.getDate()+1);
        while(t.getDay() === 0 || t.getDay() === 6) t.setDate(t.getDate()+1);
        const diff = Math.floor((t - realNow) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('targetNote').textContent = t.toLocaleDateString('en',{weekday:'long'}).toUpperCase() + " 07:50";
      }
    }

    setInterval(tick, 1000); tick();
  </script>
</body>
</html>
