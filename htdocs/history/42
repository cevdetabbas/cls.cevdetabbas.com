  <footer>
    <div class="footer-toolbar">
      <div style="display: flex; gap: 10px;">
        <button class="btn btn-primary" onclick="jumpTo(-1)">Start Session</button>
        <button class="btn" onclick="jumpTo(0)">Login</button>
        <button class="btn" onclick="jumpTo(1)">Learning</button>
        <button class="btn" onclick="jumpTo(2)">Typing</button>
        <button class="btn" onclick="jumpTo(3)">Logout</button>
      </div>
      <div style="display: flex; gap: 20px; align-items: center;">
        <button class="btn" onclick="playDoorbell()" style="border-radius: 50%; width: 45px; height: 45px; padding: 0;">ðŸ””</button>
        <div class="mode-selector">
          <button class="mode-btn active" id="mode-real" onclick="setMode('real')">Real-time</button>
          <button class="mode-btn" id="mode-sim" onclick="setMode('sim')">Simulate</button>
          <button class="mode-btn" id="mode-flash" onclick="setMode('flash')">Flash</button>
        </div>
      </div>
    </div>
    <div style="padding: 10px 40px; display: flex; justify-content: space-between; color: var(--muted); font-size: 12px; font-weight: 700;">
      <span id="systemStatus">SYSTEM READY</span>
      <span>MR. OZ TECH ZONE PRO EDITION v3</span>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2];
    let currentMode = 'real';
    let timeAnchor = null;
    let lastStage = -1;
    const audioCtx = new (window.AudioContext || window.webkitAudioContext)();

    function playDoorbell() {
      const now = audioCtx.currentTime;
      // Ding (Higher)
      const osc1 = audioCtx.createOscillator();
      const gain1 = audioCtx.createGain();
      osc1.frequency.setValueAtTime(660, now); // E5
      gain1.gain.setValueAtTime(0, now);
      gain1.gain.linearRampToValueAtTime(0.3, now + 0.05);
      gain1.gain.exponentialRampToValueAtTime(0.01, now + 0.5);
      osc1.connect(gain1); gain1.connect(audioCtx.destination);
      osc1.start(now); osc1.stop(now + 0.5);
      // Dong (Lower)
      const osc2 = audioCtx.createOscillator();
      const gain2 = audioCtx.createGain();
      osc2.frequency.setValueAtTime(523.25, now + 0.4); // C5
      gain2.gain.setValueAtTime(0, now + 0.4);
      gain2.gain.linearRampToValueAtTime(0.3, now + 0.45);
      gain2.gain.exponentialRampToValueAtTime(0.01, now + 1.2);
      osc2.connect(gain2); gain2.connect(audioCtx.destination);
      osc2.start(now + 0.4); osc2.stop(now + 1.2);
    }

    function announce(msg) {
      playDoorbell();
      const b = document.getElementById('banner');
      b.textContent = msg; b.classList.add('show');
      setTimeout(() => b.classList.remove('show'), 4000);
      const utterance = new SpeechSynthesisUtterance(msg);
      window.speechSynthesis.speak(utterance);
    }

    function setMode(mode) {
      currentMode = mode;
      document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
      document.getElementById('mode-' + mode).classList.add('active');
      timeAnchor = null; 
      document.getElementById('systemStatus').textContent = mode.toUpperCase() + " MODE ACTIVE";
    }

    function jumpTo(idx) {
      if (currentMode === 'real') setMode('sim');
      const now = new Date();
      let mins = 0;
      if (idx >= 0) { for(let i=0; i<idx; i++) mins += sessionMins[i]; }
      timeAnchor = { real: Date.now(), fake: now.setHours(7, 50 + mins, 0, 0) };
      if (idx === -1) announce("Starting Full Class Session");
    }

    function getNow() {
      if (currentMode === 'real') return new Date();
      if (!timeAnchor) timeAnchor = { real: Date.now(), fake: Date.now() };
      const speed = currentMode === 'flash' ? 60 : 1;
      const elapsed = (Date.now() - timeAnchor.real) * speed;
      return new Date(timeAnchor.fake + elapsed);
    }

    function update() {
      const now = getNow();
      document.getElementById('dateDisplay').textContent = now.toLocaleDateString('en-US', {weekday:'long', month:'short', day:'numeric'});
      document.getElementById('timeDisplay').textContent = now.toLocaleTimeString('en-US', {hour12:false});

      const start = 7 * 3600 + 50 * 60;
      const end = start + (sessionMins.reduce((a,b)=>a+b, 0) * 60);
      const curr = now.getHours() * 3600 + now.getMinutes() * 60 + now.getSeconds();

      const names = ["Login", "Learning", "Typing", "Logout"];
      const isClass = curr >= start && curr < end;
      document.getElementById('standby-overlay').classList.toggle('show', !isClass);

      if (isClass) {
        let acc = start;
        for(let i=0; i<4; i++) {
          const card = document.getElementById(`card${i}`);
          const ring = document.getElementById(`ring${i}`);
          const tm = document.getElementById(`tm${i}`);
          const dur = sessionMins[i] * 60;

          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(`${names[i]} session is starting`); lastStage = i; }
            card.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            tm.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            ring.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            card.classList.remove('active');
            ring.style.strokeDashoffset = (curr >= (acc+dur)) ? 0 : 283;
            tm.textContent = (curr >= (acc+dur)) ? "Done" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      } else {
        lastStage = -1;
        // Logic for next class countdown
        let target = new Date(now);
        target.setHours(7, 50, 0, 0);
        if (curr >= end) target.setDate(target.getDate() + 1);
        while(target.getDay() === 0 || target.getDay() === 6) target.setDate(target.getDate() + 1);

        const diff = Math.floor((target - now) / 1000);
        const h = Math.floor(diff/3600);
        const m = Math.floor((diff%3600)/60);
        const s = diff%60;
        document.getElementById('countdownDisplay').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('nextSessionNote').textContent = `Next Class: ${target.toLocaleDateString('en-US', {weekday:'long'})} @ 07:50 AM`;
      }
    }

    setInterval(update, 1000);
    update();
  </script>
</body>
</html>
