  <header>
    <div class="wrap">
      <div class="title">Tech App with Mr. Oz</div>

      <div class="dt" aria-label="Current date and time">
        <div class="date" id="dateLine">—</div>
        <div class="time" id="timeLine">—</div>
      </div>
    </div>
  </header>

  <script>
    function updateDateTime() {
      const now = new Date();

      document.getElementById("dateLine").textContent =
        now.toLocaleDateString(undefined, {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric"
        });

      document.getElementById("timeLine").textContent =
        now.toLocaleTimeString(undefined, {
          hour: "2-digit",
          minute: "2-digit",
          second: "2-digit"
        });
    }

    updateDateTime();
    setInterval(updateDateTime, 1000);
  </script>
</body>
