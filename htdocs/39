        <button class="btn-jump" onclick="jumpTo(0)">Jump to Login</button>
        <button class="btn-jump" onclick="jumpTo(1)">Jump to Learning</button>
        <button class="btn-jump" onclick="jumpTo(2)">Jump to Typing</button>
        <button class="btn-jump" onclick="jumpTo(3)">Jump to Logout</button>
      </div>
      <div style="display:flex; align-items:center; gap:10px;"><span style="font-size: 13px; font-weight: 700; color: var(--muted); text-transform:uppercase;">Sim</span><label class="switch"><input type="checkbox" id="simSwitch"><span class="slider"></span></label></div>
    </div>
  </footer>

  <script>
    const assignedMinutes = [3, 30, 10, 2];
    let simulationOn = false;
    let simAnchor = null;
    let lastStage = -1;

    function getNow() {
      if (!simulationOn) return new Date();
      if (!simAnchor) simAnchor = { real: Date.now(), fake: Date.now() };
      const elapsed = (Date.now() - simAnchor.real) * 60;
      return new Date(simAnchor.fake + elapsed);
    }

    function jumpTo(stageIdx) {
      simulationOn = true;
      document.getElementById('simSwitch').checked = true;
      const now = new Date();
      let offsetMin = 0;
      for (let i = 0; i < stageIdx; i++) offsetMin += assignedMinutes[i];
      // Force jump to a school time (07:50 + offset)
      simAnchor = { real: Date.now(), fake: now.setHours(7, 50 + offsetMin, 0, 0) };
      announce("Jumped to Stage " + (stageIdx + 1));
    }

    function announce(msg) {
      const b = document.getElementById('banner');
      b.textContent = msg; b.classList.add('show');
      setTimeout(() => b.classList.remove('show'), 3000);
      window.speechSynthesis.speak(new SpeechSynthesisUtterance(msg));
    }

    function tick() {
      const now = getNow();
      document.getElementById('dateChip').textContent = now.toLocaleDateString();
      document.getElementById('timeChip').textContent = now.toLocaleTimeString('en-US', {hour12:false});
      document.getElementById('bigClock').textContent = now.toLocaleTimeString('en-US', {hour:'2-digit', minute:'2-digit', hour12:false});

      const currentMin = now.getHours() * 60 + now.getMinutes() + now.getSeconds()/60;
      const startMin = 7 * 60 + 50; 
      const periodLenSec = 45 * 60;
      const elapsedSec = (currentMin - startMin) * 60;

      const isOutsideClass = elapsedSec < 0 || elapsedSec > periodLenSec;
      
      // Standby only shows if NOT simulating or IF simulating but outside the fake class time
      document.getElementById('standby').classList.toggle('show', isOutsideClass);

      if (!isOutsideClass) {
        document.getElementById('footerPeriod').textContent = "Period 1 (07:50 - 08:35)";
        const totalMin = assignedMinutes.reduce((a,b)=>a+b, 0);
        const stageDurs = assignedMinutes.map(m => (m/totalMin) * periodLenSec);
        let acc = 0;
        let currentIdx = -1;

        for(let i=0; i<4; i++) {
          const card = document.getElementById(`card${i}`);
          const ring = document.getElementById(`ring${i}`);
          const cd = document.getElementById(`cd${i}`);
          if (elapsedSec >= acc && elapsedSec < (acc + stageDurs[i])) {
            currentIdx = i;
            card.classList.add('active');
            const left = Math.ceil(acc + stageDurs[i] - elapsedSec);
            cd.textContent = new Date(left * 1000).toISOString().substr(14, 5);
            ring.style.strokeDashoffset = 283 - ((elapsedSec - acc) / stageDurs[i] * 283);
          } else {
            card.classList.remove('active');
            ring.style.strokeDashoffset = 283;
          }
          acc += stageDurs[i];
        }
        if (currentIdx !== -1 && currentIdx !== lastStage) {
          const names = ["Login", "Learning", "Typing", "Logout"];
          announce(names[currentIdx] + " Started");
          lastStage = currentIdx;
        }
      } else {
        document.getElementById('footerPeriod').textContent = "No Class in Session";
        lastStage = -1;
      }
    }

    document.getElementById('simSwitch').addEventListener('change', (e) => {
      simulationOn = e.target.checked;
      simAnchor = null;
    });

    setInterval(tick, 500);
  </script>
</body>
