  <footer>
    <div style="display: flex; gap: 10px;">
      <button class="btn" onclick="jumpTo(0)" style="background: #000; color: #fff;">START CLASS</button>
      <button class="btn" onclick="jumpTo(1)">LEARNING</button>
      <button class="btn" onclick="jumpTo(2)">TYPING</button>
      <button class="btn" onclick="jumpTo(3)">LOGOUT</button>
      <button class="btn" onclick="playChime()" style="background: none;">ðŸ””</button>
    </div>
    <div class="mode-group">
      <button class="mode-btn active" id="m-real" onclick="setMode('real')">REALTIME</button>
      <button class="mode-btn" id="m-sim" onclick="setMode('sim')">SIMULATE</button>
      <button class="mode-btn" id="m-flash" onclick="setMode('flash')">FLASH</button>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    const ctx = new (window.AudioContext || window.webkitAudioContext)();

    async function announce(msg) {
      playChime();
      await new Promise(r => setTimeout(r, 2000)); // Wait for chime to finish
      const ut = new SpeechSynthesisUtterance(msg);
      window.speechSynthesis.speak(ut);
    }

    function playChime() {
      const now = ctx.currentTime;
      [554, 440, 329, 277].forEach((f, i) => {
        const osc = ctx.createOscillator(); const g = ctx.createGain();
        osc.frequency.setValueAtTime(f, now + i * 0.4);
        g.gain.setValueAtTime(0, now + i * 0.4);
        g.gain.linearRampToValueAtTime(0.2, now + i * 0.4 + 0.05);
        g.gain.exponentialRampToValueAtTime(0.01, now + i * 0.4 + 0.8);
        osc.connect(g); g.connect(ctx.destination);
        osc.start(now + i * 0.4); osc.stop(now + i * 0.4 + 0.8);
      });
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null;
      document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
      document.getElementById('m-' + m).classList.add('active');
    }

    function jumpTo(idx) {
      if (currentMode === 'real') setMode('sim');
      const d = new Date();
      let m = 0; for(let i=0; i<idx; i++) m += sessionMins[i];
      timeAnchor = { real: Date.now(), fake: d.setHours(7, 50+m, 0,0) };
    }

    function tick() {
      const now = (currentMode === 'real') ? new Date() : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : new Date());
      
      document.getElementById('dateVal').textContent = `${now.getMonth()+1}/${now.getDate()}/${now.getFullYear()}`;
      document.getElementById('timeVal').textContent = now.toLocaleTimeString('en', {hour12:false});

      const start = 7 * 3600 + 50 * 60;
      const end = start + (sessionMins.reduce((a,b)=>a+b,0) * 60);
      const curr = now.getHours() * 3600 + now.getMinutes() * 60 + now.getSeconds();
      
      const isClass = curr >= start && curr < end;
      const isAutoModeOverflow = (currentMode !== 'real' && timeAnchor);
      
      // If we are simulating, we don't show the flight deck (standby bar)
      const showFlightDeck = !isClass && !isAutoModeOverflow;
      document.getElementById('flight-deck').classList.toggle('active', showFlightDeck);

      if (isClass || isAutoModeOverflow) {
        let acc = isAutoModeOverflow ? (new Date(timeAnchor.fake).getHours()*3600 + new Date(timeAnchor.fake).getMinutes()*60) : start;
        for(let i=0; i<4; i++) {
          const card = document.getElementById(`c${i}`), r = document.getElementById(`r${i}`), t = document.getElementById(`t${i}`);
          const dur = sessionMins[i] * 60;
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(`${names[i]} session starting`); lastStage = i; }
            card.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            card.classList.remove('active');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc+dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      } else {
        lastStage = -1;
        let target = new Date(now); target.setHours(7,50,0,0);
        if (curr >= end) target.setDate(target.getDate()+1);
        while(target.getDay() === 0 || target.getDay() === 6) target.setDate(target.getDate()+1);
        const diff = Math.floor((target - now) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('nextDayTarget').textContent = target.toLocaleDateString('en',{weekday:'long'}).toUpperCase() + " 07:50";
      }
    }

    setInterval(tick, 1000); tick();
  </script>
</body>
</html>
