  <footer>
    <div style="display: flex;">
      <button class="btn" onclick="runSession('all')">START SESSION</button>
      <button class="btn btn-apple" onclick="runSession(0)">LOGIN</button>
      <button class="btn btn-apple" onclick="runSession(1)">LEARN</button>
      <button class="btn btn-apple" onclick="runSession(2)">TYPE</button>
      <button class="btn btn-apple" onclick="runSession(3)">EXIT</button>
    </div>

    <div style="display: flex; align-items: center;">
      <div class="grade-selector">
        <button class="grade-btn" id="gr-prek" onclick="setGrade('prek')">PreK-2</button>
        <button class="grade-btn active" id="gr-35" onclick="setGrade('35')">3-5</button>
      </div>
      
      <button class="btn btn-apple" onclick="playChime()" style="font-size: 28px; border-radius: 50%; width: 60px; height: 60px; padding: 0; margin-right: 20px;">üîî</button>
      
      <div class="mode-group">
        <button class="mode-btn active" id="m-real" onclick="setMode('real')">Real</button>
        <button class="mode-btn" id="m-sim" onclick="setMode('sim')">Sim</button>
        <button class="mode-btn" id="m-flash" onclick="setMode('flash')">Flash</button>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    let selectedGrade = '35';
    let audioCtx = null, isAnnouncing = false;

    function setGrade(val) {
      selectedGrade = val;
      document.querySelectorAll('.grade-btn').forEach(b => b.classList.remove('active'));
      document.getElementById('gr-' + val).classList.add('active');
      
      const front = document.getElementById('coinFront');
      const back = document.getElementById('coinBack');
      
      if(val === 'prek') {
        front.src = "images/pbs.jpg"; back.src = "images/abc.jpg";
      } else {
        front.src = "images/typing.png"; back.src = "images/nitrotype.jpg";
      }
    }

    function getAudio() {
      if(!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();
      if(audioCtx.state === 'suspended') audioCtx.resume();
      return audioCtx;
    }

    function playChime() {
      const ctx = getAudio();
      const now = ctx.currentTime;
      [554.37, 440.00, 329.63, 277.18].forEach((f, i) => {
        const osc = ctx.createOscillator(); const gain = ctx.createGain();
        osc.frequency.setValueAtTime(f, now + i * 0.45);
        gain.gain.setValueAtTime(0, now + i * 0.45);
        gain.gain.linearRampToValueAtTime(0.25, now + i * 0.45 + 0.05);
        gain.gain.exponentialRampToValueAtTime(0.01, now + (i+1.2) * 0.85);
        osc.connect(gain); gain.connect(ctx.destination);
        osc.start(now + i * 0.45); osc.stop(now + (i+1.2) * 0.85);
      });
    }

    async function announce(msg) {
      if(isAnnouncing) return;
      isAnnouncing = true;
      playChime();
      await new Promise(r => setTimeout(r, 2400));
      const ut = new SpeechSynthesisUtterance(msg);
      ut.onend = () => isAnnouncing = false;
      window.speechSynthesis.speak(ut);
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null; lastStage = -1;
      document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
      document.getElementById('m-'+m).classList.add('active');
      document.querySelectorAll('.card').forEach(c => c.classList.remove('active'));
      document.querySelectorAll('.ring-bar').forEach(r => r.style.strokeDashoffset = 283);
    }

    function runSession(idx) {
      if(currentMode === 'real') setMode('sim');
      const d = new Date();
      let offset = 0; if(idx !== 'all') for(let i=0; i<idx; i++) offset += sessionMins[i];
      timeAnchor = { real: Date.now(), fake: d.setHours(7, 50 + offset, 0, 0) };
      lastStage = -1;
    }

    function tick() {
      const realNow = new Date();
      document.getElementById('dVal').textContent = realNow.toLocaleDateString('tr-TR');
      document.getElementById('tVal').textContent = realNow.toLocaleTimeString('tr-TR', {hour12:false});

      const start = 7*3600 + 50*60, end = start + (45*60);
      const isClassClock = (realNow.getHours()*3600 + realNow.getMinutes()*60) >= start && (realNow.getHours()*3600 + realNow.getMinutes()*60) < end;
      
      const standby = currentMode === 'real' && !isClassClock;
      document.getElementById('atmosphere').classList.toggle('visible', standby);
      document.getElementById('flight-deck').classList.toggle('active', standby);

      let now = (currentMode === 'real') ? realNow : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : null);
      
      if(now) {
        const curr = now.getHours()*3600 + now.getMinutes()*60 + now.getSeconds();
        let acc = start;
        for(let i=0; i<4; i++) {
          const c = document.getElementById(`card${i}`), r = document.getElementById(`ring${i}`), t = document.getElementById(`tm${i}`);
          const coin = document.getElementById('typingCoin');
          const dur = sessionMins[i]*60;
          
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(names[i] + " phase started."); lastStage = i; }
            c.classList.add('active');
            if(i === 2) coin.classList.add('spinning');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            c.classList.remove('active');
            if(i === 2) coin.classList.remove('spinning');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      }

      if(standby) {
        let t = new Date(realNow); t.setHours(7,50,0,0);
        if((realNow.getHours()*3600 + realNow.getMinutes()*60) >= end) t.setDate(t.getDate()+1);
        while(t.getDay() === 0 || t.getDay() === 6) t.setDate(t.getDate()+1);
        const diff = Math.floor((t - realNow) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('targetNote').textContent = t.toLocaleDateString('tr-TR',{weekday:'long'}).toUpperCase() + " @ 07:50 AM";
      }
    }

    setInterval(tick, 1000); 
    tick();
  </script>
</body>
</html>
