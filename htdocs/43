  <footer>
    <div class="footer-row">
      <div style="display: flex; gap: 10px;">
        <button class="btn" onclick="jumpTo(-1)" style="color: var(--blue);">â–¶ START CLASS</button>
        <button class="btn" onclick="jumpTo(0)">LOGIN</button>
        <button class="btn" onclick="jumpTo(1)">LEARNING</button>
        <button class="btn" onclick="jumpTo(2)">TYPING</button>
        <button class="btn" onclick="jumpTo(3)">LOGOUT</button>
      </div>
      <div style="display: flex; gap: 15px; align-items: center;">
        <button class="btn-bell" onclick="playChime()">ðŸ””</button>
        <div class="mode-group">
          <button class="mode-btn active" id="m-real" onclick="setMode('real')">REALTIME</button>
          <button class="mode-btn" id="m-sim" onclick="setMode('sim')">SIMULATE</button>
          <button class="mode-btn" id="m-flash" onclick="setMode('flash')">FLASH</button>
        </div>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2];
    const names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    const ctx = new (window.AudioContext || window.webkitAudioContext)();

    function playChime() {
      const now = ctx.currentTime;
      const notes = [554.37, 440.00, 329.63, 277.18]; // C#5, A4, E4, C#4 (Airport Arpeggio)
      notes.forEach((freq, i) => {
        const osc = ctx.createOscillator();
        const gain = ctx.createGain();
        osc.frequency.setValueAtTime(freq, now + i * 0.4);
        gain.gain.setValueAtTime(0, now + i * 0.4);
        gain.gain.linearRampToValueAtTime(0.2, now + i * 0.4 + 0.05);
        gain.gain.exponentialRampToValueAtTime(0.01, now + i * 0.4 + 0.8);
        osc.connect(gain); gain.connect(ctx.destination);
        osc.start(now + i * 0.4); osc.stop(now + i * 0.4 + 0.8);
      });
    }

    function announce(msg) {
      playChime();
      const b = document.getElementById('banner');
      b.textContent = msg.toUpperCase(); b.classList.add('show');
      setTimeout(() => b.classList.remove('show'), 5000);
      const ut = new SpeechSynthesisUtterance(msg);
      window.speechSynthesis.speak(ut);
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null;
      document.querySelectorAll('.mode-btn').forEach(btn => btn.classList.remove('active'));
      document.getElementById('m-' + m).classList.add('active');
    }

    function jumpTo(idx) {
      if (currentMode === 'real') setMode('sim');
      const base = new Date();
      let m = 0; if (idx >= 0) { for(let i=0; i<idx; i++) m += sessionMins[i]; }
      timeAnchor = { real: Date.now(), fake: base.setHours(7, 50 + m, 0, 0) };
    }

    function getNow() {
      if (currentMode === 'real') return new Date();
      if (!timeAnchor) timeAnchor = { real: Date.now(), fake: Date.now() };
      const speed = (currentMode === 'flash') ? 60 : 1;
      return new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * speed);
    }

    function tick() {
      const now = getNow();
      document.getElementById('dateVal').textContent = `${now.getMonth()+1}/${now.getDate()}/${now.getFullYear()}`;
      document.getElementById('timeVal').textContent = now.toLocaleTimeString('en-US', {hour12:false});

      const start = 7 * 3600 + 50 * 60;
      const end = start + (sessionMins.reduce((a,b)=>a+b, 0) * 60);
      const curr = now.getHours() * 3600 + now.getMinutes() * 60 + now.getSeconds();
      const isClass = curr >= start && curr < end;

      document.getElementById('standby-overlay').classList.toggle('show', !isClass);

      if (isClass) {
        let acc = start;
        for(let i=0; i<4; i++) {
          const card = document.getElementById(`c${i}`), ring = document.getElementById(`r${i}`), tm = document.getElementById(`t${i}`);
          const dur = sessionMins[i] * 60;
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(`${names[i]} session starting`); lastStage = i; }
            card.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            tm.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            ring.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
            document.body.style.background = ['#f0f7ff','#f4fff0','#fff9f0','#fff0f5'][i];
          } else {
            card.classList.remove('active');
            ring.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            tm.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      } else {
        lastStage = -1;
        document.body.style.background = 'var(--bg)';
        let target = new Date(now); target.setHours(7, 50, 0, 0);
        if (curr >= end) target.setDate(target.getDate() + 1);
        while(target.getDay() === 0 || target.getDay() === 6) target.setDate(target.getDate() + 1);
        const diff = Math.floor((target - now) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('bigCountdown').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('nextNote').textContent = `NEXT CLASS: ${target.toLocaleDateString('en-US', {weekday:'long'}).toUpperCase()} @ 07:50 AM`;
      }
    }

    setInterval(tick, 1000);
    tick();
  </script>
</body>
