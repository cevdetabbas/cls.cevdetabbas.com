  <footer>
    <div style="display: flex; gap: 8px;">
      <button class="btn" onclick="startFullClass()" style="background:#000; color:#fff">â–¶ START CLASS</button>
      <button class="btn" onclick="jumpTo(0)">LOGIN</button>
      <button class="btn" onclick="jumpTo(1)">LEARNING</button>
      <button class="btn" onclick="jumpTo(2)">TYPING</button>
      <button class="btn" onclick="jumpTo(3)">LOGOUT</button>
    </div>
    <div style="display: flex; gap: 15px; align-items: center;">
      <button class="btn" onclick="playChime()" style="background:none; border: 1px solid #ddd;">ðŸ””</button>
      <div class="mode-group">
        <button class="mode-btn active" id="m-real" onclick="setMode('real')">REALTIME</button>
        <button class="mode-btn" id="m-sim" onclick="setMode('sim')">SIMULATE</button>
        <button class="mode-btn" id="m-flash" onclick="setMode('flash')">FLASH</button>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Learning", "Typing", "Logout"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    const audio = new (window.AudioContext || window.webkitAudioContext)();

    // ATMOSPHERE LOGIC
    let currentStageSnippet = 0;
    function cycleAtmosphere() {
      document.querySelectorAll('.stage').forEach(s => s.classList.remove('active'));
      currentStageSnippet = (currentStageSnippet + 1) % 4;
      const stage = document.getElementById(`stage-${currentStageSnippet}`);
      stage.classList.add('active');
      stage.innerHTML = ''; // Clear old particles
      for(let i=0; i<30; i++) {
        const p = document.createElement('div');
        p.style.left = Math.random()*100 + 'vw';
        p.style.animationDelay = Math.random()*5 + 's';
        if(currentStageSnippet===0) { p.className = 'bubbles'; p.style.width = p.style.height = Math.random()*30+'px'; stage.appendChild(p); }
        if(currentStageSnippet===1) { p.className = 'rain'; stage.appendChild(p); }
        if(currentStageSnippet===2) { p.className = 'snow'; p.style.width = p.style.height = Math.random()*5+'px'; stage.appendChild(p); }
        if(currentStageSnippet===3) { p.className = 'firework'; p.style.background = `hsl(${Math.random()*360}, 100%, 50%)`; stage.appendChild(p); }
      }
    }
    setInterval(cycleAtmosphere, 5000);
    cycleAtmosphere();

    // UI UPDATES
    setInterval(() => {
      const cards = [0,1,2,3];
      document.querySelectorAll('.card').forEach(c => c.classList.remove('highlight'));
      document.getElementById('card' + cards[Math.floor(Math.random()*4)]).classList.add('highlight');
    }, 1000);

    async function announce(msg) {
      playChime();
      await new Promise(r => setTimeout(r, 1800));
      window.speechSynthesis.speak(new SpeechSynthesisUtterance(msg));
    }

    function playChime() {
      const now = audio.currentTime;
      [554, 440, 329, 277].forEach((f, i) => {
        const o = audio.createOscillator(); const g = audio.createGain();
        o.frequency.setValueAtTime(f, now + i * 0.4);
        g.gain.setValueAtTime(0, now + i * 0.4);
        g.gain.linearRampToValueAtTime(0.2, now + i * 0.4 + 0.05);
        g.gain.exponentialRampToValueAtTime(0.01, now + (i+1)*0.7);
        o.connect(g); g.connect(audio.destination);
        o.start(now + i * 0.4); o.stop(now + (i+1)*0.7);
      });
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null;
      document.querySelectorAll('.mode-btn').forEach(b => b.classList.remove('active'));
      document.getElementById('m-' + m).classList.add('active');
    }

    function startFullClass() {
      if(currentMode === 'real') setMode('sim');
      const d = new Date(); d.setHours(7, 50, 0, 0);
      timeAnchor = { real: Date.now(), fake: d.getTime() };
      announce("The full class session is now beginning");
    }

    function jumpTo(idx) {
      if(currentMode === 'real') setMode('sim');
      const d = new Date();
      let m = 0; for(let i=0; i<idx; i++) m += sessionMins[i];
      d.setHours(7, 50+m, 0, 0);
      timeAnchor = { real: Date.now(), fake: d.getTime() };
      announce(`${names[idx]} session activated`);
    }

    function tick() {
      const now = (currentMode === 'real') ? new Date() : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : null);
      
      const realNow = new Date();
      document.getElementById('dVal').textContent = `${realNow.getMonth()+1}/${realNow.getDate()}/${realNow.getFullYear()}`;
      document.getElementById('tVal').textContent = realNow.toLocaleTimeString('en-US', {hour12:false});

      const start = 7*3600 + 50*60;
      const end = start + (sessionMins.reduce((a,b)=>a+b,0)*60);
      const curr = now ? (now.getHours()*3600 + now.getMinutes()*60 + now.getSeconds()) : -1;

      // Show standby/flight deck only in Real-time if no class
      const isClassTimeReal = (realNow.getHours()*3600 + realNow.getMinutes()*60) >= start && (realNow.getHours()*3600 + realNow.getMinutes()*60) < end;
      document.getElementById('flight-deck').classList.toggle('active', currentMode === 'real' && !isClassTimeReal);
      document.getElementById('atmosphere').style.opacity = (now && curr >= start && curr < end) ? 0.1 : 1;

      if (now && curr >= start && curr < end) {
        let acc = start;
        for(let i=0; i<4; i++) {
          const c = document.getElementById(`card${i}`), r = document.getElementById(`ring${i}`), t = document.getElementById(`tm${i}`);
          const dur = sessionMins[i]*60;
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(`${names[i]} session starting`); lastStage = i; }
            c.classList.add('active');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            c.classList.remove('active');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      } else if (currentMode === 'real') {
        lastStage = -1;
        let target = new Date(realNow); target.setHours(7,50,0,0);
        if ((realNow.getHours()*3600 + realNow.getMinutes()*60) >= end) target.setDate(target.getDate()+1);
        while(target.getDay() === 0 || target.getDay() === 6) target.setDate(target.getDate()+1);
        const diff = Math.floor((target - realNow) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
        document.getElementById('targetNote').textContent = target.toLocaleDateString('en',{weekday:'long'}).toUpperCase() + " 07:50";
      }
    }

    setInterval(tick, 1000); tick();
  </script>
</body>
</html>
