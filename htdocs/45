    .mode-btn.active { background: #fff; color: #000; box-shadow: 0 4px 10px rgba(0,0,0,0.1); }

    #banner { position: fixed; top: 120px; left: 50%; transform: translateX(-50%); background: #000; color: #fff; padding: 12px 30px; border-radius: 50px; font-weight: 800; opacity: 0; transition: 0.5s; z-index: 1000; }
    #banner.show { opacity: 1; top: 140px; }

    /* ATMOSPHERE STYLES */
