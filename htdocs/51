  <footer>
    <div style="display: flex;">
      <button class="btn" onclick="jumpTo('all')">START SESSION</button>
      <button class="btn btn-apple" onclick="jumpTo(0)">LOGIN ONLY</button>
      <button class="btn btn-apple" onclick="jumpTo(1)">ACTIVITY</button>
      <button class="btn btn-apple" onclick="jumpTo(2)">PRACTICE</button>
      <button class="btn btn-apple" onclick="jumpTo(3)">EXIT</button>
    </div>

    <!-- GRADE SWITCHER -->
    <div class="switch-group">
      <div class="switch-label">GRADE:</div>
      <div class="toggle" id="gradeToggle" onclick="toggleGrade()">
        <div class="toggle-knob" id="knob"></div>
        <span id="lblPreK" class="active">PreK-2</span>
        <span id="lbl35">3-5</span>
      </div>
    </div>

    <div style="display: flex; align-items: center; gap: 20px;">
      <button class="btn btn-apple" onclick="playChime()" style="font-size: 28px; border-radius: 50%; width: 64px; height: 64px; padding: 0;">üîî</button>
      <div style="background: #e8e8ed; padding: 6px; border-radius: 22px; display: flex; gap: 6px;">
        <button class="btn-apple" style="border:none; padding:10px 15px; border-radius:15px; font-weight:700;" id="m-real" onclick="setMode('real')">Real</button>
        <button class="btn-apple" style="border:none; padding:10px 15px; border-radius:15px; font-weight:700;" id="m-sim" onclick="setMode('sim')">Sim</button>
        <button class="btn-apple" style="border:none; padding:10px 15px; border-radius:15px; font-weight:700;" id="m-flash" onclick="setMode('flash')">Flash</button>
      </div>
    </div>
  </footer>

  <script>
    const sessionMins = [3, 30, 10, 2], names = ["Login", "Activity", "Practice", "Exit"];
    let currentMode = 'real', timeAnchor = null, lastStage = -1;
    let selectedGrade = 'prek'; // 'prek' or '35'
    let audioCtx = null;

    function toggleGrade() {
      const isPreK = selectedGrade === 'prek';
      selectedGrade = isPreK ? '35' : 'prek';
      
      const toggle = document.getElementById('gradeToggle');
      toggle.classList.toggle('grade35', !isPreK);
      document.getElementById('lblPreK').classList.toggle('active', !isPreK);
      document.getElementById('lbl35').classList.toggle('active', isPreK);

      // Update Slot 1 visuals
      const title = document.getElementById('slot1Title');
      const front = document.getElementById('imgFront');
      const back = document.getElementById('imgBack');

      if (selectedGrade === 'prek') {
        title.innerText = "Kids Lab";
        front.src = "images/pbs_kids.png"; 
        back.src = "images/abcya.png";
      } else {
        title.innerText = "Nitro Lab";
        front.src = "images/typing_com.png";
        back.src = "images/nitrotype.png";
      }
    }

    function getCtx() {
      if (!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();
      if (audioCtx.state === 'suspended') audioCtx.resume();
      return audioCtx;
    }

    function playChime() {
      const ctx = getCtx();
      const now = ctx.currentTime;
      [554.37, 440.00, 329.63, 277.18].forEach((f, i) => {
        const o = ctx.createOscillator(); const g = ctx.createGain();
        o.frequency.setValueAtTime(f, now + i * 0.45);
        g.gain.setValueAtTime(0, now + i * 0.45);
        g.gain.linearRampToValueAtTime(0.2, now + i * 0.45 + 0.05);
        g.gain.exponentialRampToValueAtTime(0.01, now + (i+1.2) * 0.85);
        o.connect(g); g.connect(ctx.destination);
        o.start(now + i * 0.45); o.stop(now + (i + 1.2) * 0.85);
      });
    }

    async function announce(msg) {
      playChime();
      await new Promise(r => setTimeout(r, 2400)); 
      window.speechSynthesis.speak(new SpeechSynthesisUtterance(msg));
    }

    function setMode(m) {
      currentMode = m; timeAnchor = null; lastStage = -1;
      document.querySelectorAll('.card').forEach(c => c.classList.remove('active'));
      document.querySelectorAll('.ring-bar').forEach(r => r.style.strokeDashoffset = 283);
    }

    function jumpTo(idx) {
      if(currentMode === 'real') setMode('sim');
      const d = new Date();
      let offset = 0; if(idx !== 'all') { for(let i=0; i<idx; i++) offset += sessionMins[i]; }
      timeAnchor = { real: Date.now(), fake: d.setHours(7, 50 + offset, 0, 0) };
    }

    function tick() {
      const realNow = new Date();
      document.getElementById('dVal').textContent = realNow.toLocaleDateString('tr-TR');
      document.getElementById('tVal').textContent = realNow.toLocaleTimeString('tr-TR', {hour12:false});

      const start = 7*3600 + 50*60, end = start + (45*60);
      const isClassClock = (realNow.getHours()*3600 + realNow.getMinutes()*60) >= start && (realNow.getHours()*3600 + realNow.getMinutes()*60) < end;
      
      const standby = currentMode === 'real' && !isClassClock;
      document.getElementById('flight-deck').classList.toggle('active', standby);

      let focusedTime = (currentMode === 'real') ? realNow : (timeAnchor ? new Date(timeAnchor.fake + (Date.now() - timeAnchor.real) * (currentMode === 'flash' ? 60 : 1)) : null);
      
      if(focusedTime) {
        const curr = focusedTime.getHours()*3600 + focusedTime.getMinutes()*60 + focusedTime.getSeconds();
        let acc = start;
        for(let i=0; i<4; i++) {
          const c = document.getElementById(`card${i}`), r = document.getElementById(`ring${i}`), t = document.getElementById(`tm${i}`), coin = c.querySelector('.coin');
          const dur = sessionMins[i]*60;
          if (curr >= acc && curr < acc + dur) {
            if (i !== lastStage) { announce(names[i] + " session is active."); lastStage = i; }
            c.classList.add('active');
            if(coin) coin.classList.add('spinning');
            const rem = Math.ceil(acc + dur - curr);
            t.textContent = new Date(rem * 1000).toISOString().substr(14, 5);
            r.style.strokeDashoffset = 283 - ((curr - acc) / dur * 283);
          } else {
            c.classList.remove('active');
            if(coin) coin.classList.remove('spinning');
            r.style.strokeDashoffset = (curr >= acc + dur) ? 0 : 283;
            t.textContent = (curr >= acc + dur) ? "DONE" : `${sessionMins[i].toString().padStart(2,'0')}:00`;
          }
          acc += dur;
        }
      }

      if(standby) {
        let t = new Date(realNow); t.setHours(7,50,0,0);
        if((realNow.getHours()*3600 + realNow.getMinutes()*60) >= end) t.setDate(t.getDate()+1);
        while(t.getDay() === 0 || t.getDay() === 6) t.setDate(t.getDate()+1);
        const diff = Math.floor((t - realNow) / 1000);
        const h = Math.floor(diff/3600), m = Math.floor((diff%3600)/60), s = diff%60;
        document.getElementById('slotTime').textContent = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
      }
    }

    setInterval(tick, 1000); 
    tick();
  </script>
</body>
</html>
