    .snowflake { position: absolute; background: #fff; border-radius: 50%; opacity: 0.8; pointer-events: none; animation: fall linear infinite; }
    @keyframes fall { from { transform: translateY(-10vh); } to { transform: translateY(110vh); } }
    .firework { position: absolute; width: 5px; height: 5px; border-radius: 50%; animation: explode 1s ease-out forwards; }
    @keyframes explode { 0% { transform: scale(1); opacity: 1; } 100% { transform: scale(30); opacity: 0; box-shadow: 0 0 20px 5px currentColor; } }
    .bubble { position: absolute; bottom: -120px; width: 35px; height: 35px; border-radius: 50%; background: rgba(255, 255, 255, 0.45); box-shadow: 0 0 15px rgba(255, 255, 255, 0.7); animation: rise 12s infinite ease-in; pointer-events: none; }
    @keyframes rise { 0% { transform: translateY(0) translateX(0) scale(0.8); opacity: 0; } 10% { opacity: 0.9; } 100% { transform: translateY(-120vh) translateX(40px) scale(1.1); opacity: 0; } }
    .sparkle { position: absolute; width: 4px; height: 4px; border-radius: 50%; background: radial-gradient(circle, #fff, transparent); opacity: 0; animation: sparkle 2s ease-out forwards; pointer-events: none; }
    @keyframes sparkle { 0% { opacity: 0.9; transform: scale(1); } 100% { opacity: 0; transform: scale(4); } }
    .penguin { position: absolute; bottom: 85px; width: 50px; height: 65px; background: url("images/tux.png") center/contain no-repeat; animation: waddle 20s linear infinite; pointer-events: none; opacity: 0.8; z-index: 1; }
    @keyframes waddle { 0% { transform: translateX(-10vw) scaleX(1); } 45% { transform: translateX(110vw) scaleX(1); } 50% { transform: translateX(110vw) scaleX(-1); } 100% { transform: translateX(-10vw) scaleX(-1); } }
    
    @keyframes rainbowMove { 0% { background-position: 0% 50%; } 100% { background-position: 200% 50%; } }

    svg defs { height: 0; width: 0; }
