  <script>
    // Config: 3m Login, 30m Learning, 10m Typing, 2m Logout
    const assignedMinutes = [3, 30, 10, 2];
    const TZ = 'America/Chicago';
    let simulationOn = false;
    let simAnchor = null;

    // Routine Logic
    function getNow() {
      if (!simulationOn) return new Date();
      if (!simAnchor) simAnchor = { real: Date.now(), fake: Date.now() };
      const elapsed = (Date.now() - simAnchor.real) * 60; // 60x speed
      return new Date(simAnchor.fake + elapsed);
    }

    function update() {
      const now = getNow();
      
      // Clock Updates
      const timeStr = now.toLocaleTimeString('en-US', { hour12: false });
      document.getElementById('timeDisplay').textContent = timeStr;
      document.getElementById('dateDisplay').textContent = now.toLocaleDateString('en-US');
      document.getElementById('bigClock').textContent = now.toLocaleTimeString('en-US', { hour: '2-digit', minute: '2-digit', hour12: false });

      // Period Logic (Örn: 08:00 - 15:00 arası okul)
      const currentMin = now.getHours() * 60 + now.getMinutes();
      const schoolStart = 7 * 60 + 50; // 07:50
      const schoolEnd = 15 * 60 + 25;  // 15:25

      const isSchoolTime = currentMin >= schoolStart && currentMin <= schoolEnd;
      document.getElementById('standby').classList.toggle('show', !isSchoolTime);

      if (isSchoolTime) {
        // Routine Timing
        // Period süresini 45 dk varsayalım. 
        const periodStart = schoolStart; // Örnek olarak ilk periyot
        const elapsedSec = (currentMin - periodStart) * 60 + now.getSeconds();
        const totalDurationSec = assignedMinutes.reduce((a, b) => a + b, 0) * 60;

        let accumulated = 0;
        let activeStage = -1;

        assignedMinutes.forEach((mins, i) => {
          const stageDur = mins * 60;
          const card = document.getElementById(`card${i}`);
          const ring = document.getElementById(`ring${i}`);
          const cd = document.getElementById(`cd${i}`);

          if (elapsedSec >= accumulated && elapsedSec < accumulated + stageDur) {
            activeStage = i;
            card.classList.add('active');
            
            const left = (accumulated + stageDur) - elapsedSec;
            cd.textContent = new Date(left * 1000).toISOString().substr(14, 5);
            
            // Ring Progress
            const pct = (elapsedSec - accumulated) / stageDur;
            const offset = 283 - (pct * 283);
            ring.style.strokeDashoffset = offset;
          } else {
            card.classList.remove('active');
            cd.textContent = "--:--";
            ring.style.strokeDashoffset = 283;
          }
          accumulated += stageDur;
        });

        document.getElementById('footerClass').textContent = "Grade 4 - Mr. Oz";
        document.getElementById('footerPeriod').textContent = "Period 1 (07:50 - 08:38)";
      }
    }

    // Toggle Simulation
    document.getElementById('simSwitch').addEventListener('change', (e) => {
      simulationOn = e.target.checked;
      simAnchor = null;
    });

    setInterval(update, 500);
  </script>
</body>
